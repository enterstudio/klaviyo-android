<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.klaviyo.klaviyoandroid">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <!--Required to receive push notifications>


        < Listen & Handles the Push Notifications -->
        <!--[Start GCM Receiver]
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.example.gcm" />
            </intent-filter>
        </receiver>
        -->

        <receiver android:name="com.klaviyo.klaviyoandroid.KlaviyoGCMReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.klaviyo.klaviyoandroid.GCM_OPEN"></action>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <!-- [Start receiver to listen for network connectivity -->
        <receiver android:name="com.klaviyo.klaviyoandroid.KlaviyoNetworkChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>

        <service
            android:name="com.klaviyo.klaviyoandroid.KlaviyoGCMListenerService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <!--[Start GCM Listener Service]
        <service
            android:name="com.klaviyo.klaviyoandroid.KlaviyoGCMListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        -->

        <!-- Full Klaviyo Service -->
        <service android:name="com.klaviyo.klaviyoandroid.Klaviyo$KlaviyoService" />

        <!-- [Start Intent Service: For Sending tokens to Klaviyo] -->
        <service
            android:name="com.klaviyo.klaviyoandroid.KlaviyoRegistrationIntentService"
            android:exported="false">
        </service>
        <!-- [End instance ID ] -->

        <!-- [Start Instance ID Listener Service: For Refreshing Tokens]  -->
        <service
            android:name="com.klaviyo.klaviyoandroid.KlaviyoTokenRefreshListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>
